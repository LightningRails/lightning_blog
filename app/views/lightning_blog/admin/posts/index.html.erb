<div class="flex justify-between items-center mb-8">
  <div>
    <h1 class="text-3xl font-bold text-base-content mb-2">Posts</h1>
    <p class="text-base-content/70">Manage your blog posts</p>
  </div>
  <%= link_to "Create New Post", lightning_blog.new_admin_post_path, class: "btn btn-primary" %>
</div>

<!-- Filters -->
<div class="card bg-base-100 shadow-lg mb-6">
  <div class="card-body">
    <%= form_with url: lightning_blog.admin_posts_path, method: :get, local: true, class: "flex flex-wrap gap-4 items-end" do |form| %>
      <div class="form-control">
        <label class="label">
          <span class="label-text">Search</span>
        </label>
        <%= form.text_field :search, value: params[:search], placeholder: "Search posts...", class: "input input-bordered" %>
      </div>
      
      <div class="form-control">
        <label class="label">
          <span class="label-text">Category</span>
        </label>
        <%= form.select :category_id, options_from_collection_for_select(@categories, :id, :name, params[:category_id]), 
            { include_blank: "All categories" }, 
            { class: "select select-bordered" } %>
      </div>
      
      <div class="form-control">
        <label class="label">
          <span class="label-text">Status</span>
        </label>
        <%= form.select :status, [['All', ''], ['Published', 'published'], ['Draft', 'draft']], 
            { selected: params[:status] }, 
            { class: "select select-bordered" } %>
      </div>
      
      <div class="form-control">
        <%= form.submit "Filter", class: "btn btn-outline" %>
        <%= link_to "Clear", lightning_blog.admin_posts_path, class: "btn btn-ghost" %>
      </div>
    <% end %>
  </div>
</div>

<!-- Posts Table -->
<div class="card bg-base-100 shadow-lg">
  <div class="card-body p-0">
    <div class="overflow-x-auto">
      <table class="table table-zebra">
        <thead>
          <tr>
            <th>Title</th>
            <th>Category</th>
            <th>Status</th>
            <th class="hidden md:table-cell">Views</th>
            <th class="hidden lg:table-cell">Created</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @posts.each do |post| %>
            <tr>
              <td>
                <div class="flex items-center space-x-3">
                  <div>
                    <div class="font-bold text-base-content">
                      <%= link_to post.title, [:admin, post], class: "hover:text-primary" %>
                    </div>
                    <div class="text-sm opacity-50 truncate max-w-xs">
                      <%= truncate(post.excerpt.presence || strip_tags(post.content), length: 60) %>
                    </div>
                  </div>
                </div>
              </td>
              <td>
                <% if post.category %>
                  <span class="badge badge-outline"><%= post.category.name %></span>
                <% else %>
                  <span class="text-base-content/40">No category</span>
                <% end %>
              </td>
              <td>
                <span class="badge badge-<%= post.published? ? 'success' : 'warning' %>">
                  <%= post.published? ? 'Published' : 'Draft' %>
                </span>
              </td>
              <td class="hidden md:table-cell">
                <span class="text-base-content/60"><%= pluralize(post.views_count, 'view') %></span>
              </td>
              <td class="hidden lg:table-cell">
                <span class="text-base-content/60"><%= post.created_at.strftime("%b %d, %Y") %></span>
              </td>
              <td>
                <div class="flex gap-2">
                  <%= link_to [:admin, post], class: "btn btn-ghost btn-xs" do %>
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="w-4 h-4 stroke-current">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                    </svg>
                  <% end %>
                  
                  <%= link_to [:edit, :admin, post], class: "btn btn-ghost btn-xs" do %>
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="w-4 h-4 stroke-current">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                    </svg>
                  <% end %>
                  
                  <%= link_to toggle_published_admin_post_path(post), method: :patch, class: "btn btn-ghost btn-xs" do %>
                    <% if post.published? %>
                      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="w-4 h-4 stroke-current">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.875 18.825A10.05 10.05 0 0112 19c-4.478 0-8.268-2.943-9.543-7a9.97 9.97 0 011.563-3.029m5.858.908a3 3 0 114.243 4.243M9.878 9.878l4.242 4.242M9.878 9.878L3 3m6.878 6.878L21 21"></path>
                      </svg>
                    <% else %>
                      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="w-4 h-4 stroke-current">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                      </svg>
                    <% end %>
                  <% end %>
                  
                  <%= link_to [:admin, post], method: :delete, 
                      confirm: "Are you sure you want to delete this post?", 
                      class: "btn btn-ghost btn-xs text-error" do %>
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="w-4 h-4 stroke-current">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                    </svg>
                  <% end %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<% if @posts.empty? %>
  <div class="text-center py-12">
    <div class="text-6xl mb-4">üìù</div>
    <h3 class="text-xl font-semibold text-base-content mb-2">No posts found</h3>
    <p class="text-base-content/60 mb-6">
      <% if params[:search].present? || params[:category_id].present? || params[:status].present? %>
        Try adjusting your filters to see more posts.
      <% else %>
        Get started by creating your first blog post.
      <% end %>
    </p>
    <%= link_to "Create New Post", lightning_blog.new_admin_post_path, class: "btn btn-primary" %>
  </div>
<% end %> 